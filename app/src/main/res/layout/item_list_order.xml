<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:background="@drawable/custom_item_food"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="9">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp"
        android:layout_weight="3"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/img_imageDish_listOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_nameDish_listOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="Nước Ép Dưa Hấu" />

        <TextView
            android:id="@+id/tv_price_listOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#FF7B01"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="60000 đ" />

        <TextView
            android:id="@+id/tv_count_listOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="Số Lượng : 1" />

    </LinearLayout>

   <LinearLayout
       android:orientation="vertical"
       android:weightSum="2"
       android:layout_width="0dp"
       android:layout_weight="2.5"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/tv_cost_listOrder"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="top|center"
           android:paddingTop="@dimen/_16sdp"
           android:textColor="#FF7B01"
           android:textSize="@dimen/_12sdp"
           android:textStyle="bold"
           tools:text="180000 đ" />
       <ImageView
           android:scaleType="centerInside"
           android:src="@drawable/ic_delete_24"
           android:id="@+id/img_deleteItem_listOrder"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>
   </LinearLayout>

</LinearLayout>