<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:padding="1dp"
    android:background="@drawable/custom_item_food"
    android:weightSum="9">

    <androidx.cardview.widget.CardView
        android:layout_weight="3"
        app:cardCornerRadius="16dp"
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_imageDish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:paddingStart="@dimen/_15sdp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textSize="16sp"
                android:textColor="#DD252525"
                android:textStyle="bold"
                tools:text ="Nước ép dưa hấu"
                android:id="@+id/tv_nameDish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textColor="#DD252525"
                android:textStyle="bold"
                tools:text="250.000 đ"
                android:id="@+id/tv_price"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="@dimen/_10sdp"
            android:gravity="bottom"
            android:paddingStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_time"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/custom_time"
                tools:text="35 phút"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_addOder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/add_order" />

</LinearLayout>