<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/custom_dialog_spinner_time"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:textStyle="bold"
        android:textColor="#F44336"
        android:textSize="@dimen/_22sdp"
        android:text="Số Người"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_number_people"
        android:inputType="number"
        android:background="#fff"
        android:textColor="#C61A1A"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold"
        android:paddingStart="@dimen/_4sdp"
        tools:text="8"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"/>
    <TextView
        android:id="@+id/btn_submit_people"
        android:textStyle="bold"
        android:textSize="@dimen/_24sdp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="Xác Nhận"
        android:background="@drawable/custom_click_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"/>

</LinearLayout>