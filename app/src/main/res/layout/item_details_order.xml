<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:background="@drawable/custom_item_food"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="9">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp"
        android:layout_weight="3"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/img_imageDish_deltails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_nameDish_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="Nước Ép Dưa Hấu" />


        <TextView
            android:id="@+id/tv_count_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="Số Lượng : 1" />

        <TextView
            android:id="@+id/tv_price_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:text="Giá Tiền : 100000" />

    </LinearLayout>
</LinearLayout>