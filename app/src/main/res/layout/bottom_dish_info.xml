<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:padding="@dimen/_2sdp"
    android:orientation="vertical"
    android:weightSum="5">

    <ImageView
        android:id="@+id/img_imageDish_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_nameDish_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingStart="@dimen/_8sdp"
        android:textColor="#DD191818"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        tools:text="Cá Kho Tiêu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_weight="0.4"
        android:background="@drawable/custom_dish_number"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:background="@drawable/custom_btn_amount_bottomsheet"
                android:id="@+id/btn_Minus_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Amount_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/custom_btn_amount_bottomsheet"
                android:id="@+id/btn_Plus_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_bottomsheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 đ"
            android:textColor="#131313"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_bottomsheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="999999 đ"
            android:textColor="#131313"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_weight="0.7"
        android:background="@drawable/custom_dish_specs"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="0.35"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/clock" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/battery" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/weight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="0.45"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_time_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                tools:text="30 Phút" />

            <TextView
                android:id="@+id/tv_kalo_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                tools:text="500 kalo" />

            <TextView
                android:id="@+id/tv_weight_bottomsheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#131313"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                tools:text="800gr" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/tv_ingredient_bottomsheet"
        android:textColor="#323131"
        android:textStyle="bold"
        android:paddingTop="@dimen/_8sdp"
        android:gravity="start"
        android:textSize="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_weight="1"
        tools:text="Thành Phần : Dầu thực vật, dầu mè
hạt tiêu, Cá trắm sông Đà,
hành, ngò, giềng và các
phụ gia khác." />
    <TextView
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Thêm"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        android:background="@drawable/custom_click_login"
        android:id="@+id/btn_add_bottomsheet"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"/>
</LinearLayout>