<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:background="@drawable/custom_item_food"
    android:layout_marginTop="@dimen/_8sdp"
    android:gravity="center"
    android:layout_gravity="right"
    android:id="@+id/layout_item_table"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_nameTable"
        android:paddingTop="@dimen/_8sdp"
        android:textStyle="bold"
        android:textColor="#DD252525"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        tools:text = "Bàn 1"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tableStatus"
        android:textColor="#DD0C0C0C"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        tools:text="Trạng Thái : Trống"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingStart="@dimen/_4sdp"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginBottom="@dimen/_4sdp"
        android:id="@+id/btn_order_table"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:background="@drawable/custom_time"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>