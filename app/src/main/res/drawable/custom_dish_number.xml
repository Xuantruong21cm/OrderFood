<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:padding="10dp">
            <corners android:radius="4dp" />
            <gradient
                android:angle="45"
                android:endColor="#E5F1F8"
                android:startColor="#E5F1F8"
                android:type="linear" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <stroke android:width="1dp" android:color="#EDEDED"></stroke>
        </shape>
    </item>

</layer-list>