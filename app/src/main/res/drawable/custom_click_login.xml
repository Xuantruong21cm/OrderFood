<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:endColor="#FF7B01" android:startColor="#FF7B01" />
            <!-- Set màu nền-->
            <solid android:color="#FF7B01"></solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="#7A6E6E"></stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="@dimen/_25sdp"></corners>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient android:endColor="#FF7B01" android:startColor="#FF7B01" />
            <!-- Set màu nền-->
            <solid android:color="#FFBE81"></solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="#7A6E6E"></stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="@dimen/_25sdp"></corners>

        </shape>
    </item>

</selector>